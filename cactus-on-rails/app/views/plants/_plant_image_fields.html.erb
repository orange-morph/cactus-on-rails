<div class="nested-fields">
	<div class="field">

		<% if f.object && f.object.image_upload && f.object.image_upload.url(:thumb) %>
        <div class="plant-image-wrapper">
          <%= image_tag(f.object.image_upload.url(:thumb)) %>
          <div class="plant-image-footer">
            <%= link_to_remove_association '<i class="fa fa-remove" aria-hidden="true"> </i> Delete'.html_safe, f, class: "btn btn-outline-danger btn-sm" %>
          </div>
        </div>
    <% else %>
        <p>Choose a file and then upload it:</p>
        <%= f.file_field :image_upload %>
        <%= f.submit 'Upload and Store Plant Image', :class => "btn btn-primary" %>
    <% end %>

    <br><br>

	</div>
	
</div>