<section class="jumbotron text-xs-center">
  <div class="container">
    <h1 class="jumbotron-heading">Cactus on Rails!</h1>
    <%= image_tag("happy_cactus.jpg") %>
    <p class="lead text-muted">Edit Plant Details</p>
    <p>
      <%= link_to '<i class="fa fa-bars datatable-icon" aria-hidden="true"> </i> View my Plants'.html_safe, plants_path, class: "btn btn-primary" %>
      <%= link_to '<i class="fa fa-plus-circle" aria-hidden="true"> </i> Add New Plant'.html_safe, new_plant_path, class: "btn btn-info" %>
    </p>
  </div>
</section>

<div class="album text-muted">
  <div class="container">

    <%= form_for(@plant) do |f| %>
      <div class="form-group">
        <div class="col-sm-3">
          <%= f.label :plant_type %><br>
          <%= f.select(:plant_type, @plant.plant_types, {}, { :class => 'form-control' }) %>
        </div>
      </div>

      <div class="clearfix"></div>
      <br>

      <p>
        <%= f.label :genus %><br>
        <%= f.text_field :genus, :size => '50' %>
      </p>

      <p>
        <%= f.label :species %><br>
        <%= f.text_field :species, :size => '50' %>
      </p>

      <p>
        <%= f.label 'Common name(s)' %><br>
        <%= f.text_field :common_name, :size => '80' %>
      </p>

      <p>
        <%= f.label :source %><br>
        <%= f.text_field :source, :size => '50' %>
      </p>

      <!--t.date :purchase_date-->

      <div class="checkbox">
        <%= label_tag(:grown_from_seed, "Grown from seed? ") %>
        <%= check_box_tag(:grown_from_seed) %>
      </div>

      <!--t.date :planted_date-->

      <p>
        <%= f.label :pot_type %><br>
        <%= f.select(:pot_type, @plant.pot_types, {}, { :class => 'form-control' }) %>
      </p>

      <p>
        <%= f.label :pot_size %><br>
        <%= f.select(:pot_size, @plant.pot_sizes, {}, { :class => 'form-control' }) %>
      </p>

      <p>
        <%= f.label :care_notes %><br>
        <%= f.text_area :care_notes, :size => "80%x10%"  %>
      </p>

      <!--t.date :repotted_date-->
      <!--t.date :next_repotting_date-->

      <p>
        <%= f.label :notes %><br>
        <%= f.text_area :notes, :size => "80%x10%"  %>
      </p>

      <h3>Images</h3>
      <div id="images">
        <%= f.fields_for :plant_images do |plant_image| %>
          <%= render 'plant_image_fields', {f: plant_image} %>
        <% end %>
        
      </div>

      <p>
        <%= f.submit %>
      </p>
    <% end %>

  </div>
</div>